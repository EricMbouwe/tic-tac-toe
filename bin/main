#!/usr/bin/env ruby

puts "Please, enter your name"
player1 = gets.chomp

puts "Please, enter your name"
player2 = gets.chomp

puts "#{player1} choose 'X' or 'O'"
choice1 = gets.chomp
choice2 = ''

until choice1 === 'X' || choice1 === 'O'
    puts "wrong value, choose 'X' or 'O'." 
    choice1 = gets.chomp
end
    if choice1 === 'X'
        choice2 << 'O'
    elsif choice1 === 'O'
        choice2 << 'X'
    end

    puts choice2

puts "\nChoose a number on the board to make your move\n\n"
   puts     '| 1 | 2 | 3 |'
   puts     '-------------'
   puts    '| 4 | 5 | 6 |'
   puts    '-------------'
   puts    '| 7 | 8 | 9 |'

val = (1..9).each { |x| x}
puts "\n#{player1}, make your move"
player1_move = gets.chomp
if player1_move != val
  puts 'wrong value, enter a new one between 1 and 9.'
  puts "#{player1}, make your move"
  player1_move = gets.chomp
end

puts "#{player2}, make your move"
player2_move = gets.chomp
if player2_move != val
    puts 'wrong value, enter a new one between 1 and 9.'
    puts "#{player2}, make your move"
    player2_move = gets.chomp
end

gameboard = [[1,2,3],[4,5,6], [7,8,9]]

puts ' ___ ___ ___'
puts '|___|___|___|'
puts '|___|___|___|'
puts '|___|___|___|'

